<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NordStarter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_purple_200</item>
        <item name="colorPrimaryVariant">@color/deep_purple_300</item>
        <item name="colorOnPrimary">@color/polar_night_0</item>
        <item name="colorSurface">@color/polar_night_1</item>
        <item name="android:colorBackground">@color/polar_night_0</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aurora_2</item>
        <item name="colorSecondaryVariant">@color/aurora_1</item>
        <item name="colorOnSecondary">@color/polar_night_0</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/polar_night_0</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/snow_storm_0</item>
        <item name="android:textColorPrimary">@color/snow_storm_0</item>
    </style>
</resources>